<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>
	<include layout="@layout/item_title" />
	<ImageView
		android:id="@+id/iv_me_head"
		android:layout_gravity="center_horizontal"
		android:layout_height="70dp"
		android:layout_marginTop="86dp"
		android:layout_marginLeft="20dp"
		android:layout_width="70dp"
		android:src="@mipmap/head"
		/>
	<TextView
		android:background="@color/blue"
		android:gravity="center_vertical"
		android:id="@+id/iv_me_name"
		android:layout_height="30dp"
		android:layout_marginTop="80dp"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_toRightOf="@id/iv_me_head"
		android:layout_width="match_parent"
		android:padding="5dp"
		android:text="老王"
		android:textSize="16sp"
		/>
	<TextView
		android:background="@color/blue"
		android:gravity="center_vertical"
		android:id="@+id/iv_me_age"
		android:layout_below="@id/iv_me_name"
		android:layout_height="30dp"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_toRightOf="@id/iv_me_head"
		android:layout_width="match_parent"
		android:padding="5dp"
		android:text="年方28"
		android:textSize="16sp"
		/>
	<TextView
		android:background="@color/blue"
		android:gravity="center_vertical"
		android:id="@+id/iv_me_sign"
		android:layout_below="@id/iv_me_age"
		android:layout_height="30dp"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_toRightOf="@id/iv_me_head"
		android:layout_width="match_parent"
		android:padding="5dp"
		android:text="我是隔壁老王"
		android:textSize="16sp"
		/>
	<TextView
		android:background="@color/pink"
		android:gravity="center_vertical"
		android:id="@+id/iv_me_helpcount"
		android:layout_below="@id/iv_me_sign"
		android:layout_height="30dp"
		android:layout_marginTop="40dp"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_width="match_parent"
		android:padding="5dp"
		android:text="助人次数：100"
		android:textSize="16sp"
		/>
	<TextView
		android:background="@color/pink"
		android:gravity="center_vertical"
		android:id="@+id/iv_me_address"
		android:layout_below="@id/iv_me_helpcount"
		android:layout_height="30dp"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_width="match_parent"
		android:padding="5dp"
		android:text="地址：星湖街213号123栋321室"
		android:textSize="16sp"
		/>
	<TextView
		android:background="@color/pink"
		android:gravity="center_vertical"
		android:id="@+id/iv_me_phone"
		android:layout_below="@id/iv_me_address"
		android:layout_height="30dp"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_width="match_parent"
		android:padding="5dp"
		android:text="电话：12312312312"
		android:textSize="16sp"
		/>
</RelativeLayout>